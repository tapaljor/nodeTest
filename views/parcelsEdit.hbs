{{>header}}
<form action="/parcels/update/{{parcel._id}}?_method=PATCH" method="POST">
    <label for="unit">Unit:</label>
    <input type="text" id="unit" name="unit" value="{{parcel.unit}}"><br><br>
    <select id="carrier" name="carrier">
        <option value="{{parcel.carrier}}">{{parcel.carrier}}</option>
        {{#each carriers}}
        <option value="{{carrier}}">{{carrier}}</option>
        {{/each}}
    </select>
    <label for="location">Location:</label>
    <select id="location" name="location">
        <option value="{{parcel.location}}">{{parcel.location}}</option>
        <option value="A">A</option>
        <option value="B">B</option>
        <option value="C">C</option>
        <option value="D">D</option>
        <option value="E">E</option>
        <option value="F">F</option>
    </select>
    <label for="description">Description:</label>
    <input type="text" id="description" name="description" value="{{parcel.description}}"><br><br>
    <input type="submit" value="Upate">
</form>
{{>footer}}