{{>header}}
<section class="table-container">
 <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Privilege</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            {{#each staff}}
            <tr>
                <td>{{this.username}}</td>
                <td>{{this.privilege}}</td>
                <td><a href="/register/edit/{{this._id}}">Change password</a></td>
                <td>
                    <form action="/register/delete/{{this._id}}?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this resident?');">
                        <button type="submit" style="color: red; background: none; border: none; cursor: pointer;">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
</section>
{{>footer}}
