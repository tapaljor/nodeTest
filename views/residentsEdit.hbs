{{>header}}
<form action="/residents/update/{{result._id}}?_method=PATCH" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="{{result.name}}">
    <label for="age">Age:</label>
    <input type="number" id="age" name="age" value="{{result.age}}">
    <label for="gender">Gender:</label>
    <select id="gender" name="gender">
        <option value="{{result.gender}}">{{result.gender}}</option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
    </select>
    <label for="street">Street:</label>
    <input type="text" id="street" name="address[street]" value="{{result.address.street}}">
    <label for="city">City:</label>
    <input type="text" id="city" name="address[city]" value="{{result.address.city}}">
    <label for="state">State:</label>
    <input type="text" id="state" name="address[state]" value="{{result.address.state}}">
    <label for="zip">ZIP Code:</label>
    <input type="text" id="zip" name="address[zip]" value="{{result.address.zip}}">
    <label for="phoneNumber">Phone Number:</label>
    <input type="tel" id="phoneNumber" name="phoneNumber" value="{{result.phoneNumber}}">
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="{{result.email}}">
    <input type="submit" value="Update">
</form>
{{>footer}}